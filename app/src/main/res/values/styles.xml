<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <integer name="min_sweep_angle">0</integer>
    <integer name="max_sweep_angle">300</integer>
    <style name="CircularThemeProgressBar" parent="android:Widget.Holo.ProgressBar">
        <item name="cpb_color">@color/primary</item>
        <item name="cpb_stroke_width">6dp</item>
        <item name="cpb_min_sweep_angle">@integer/min_sweep_angle</item>
        <item name="cpb_max_sweep_angle">@integer/max_sweep_angle</item>
        <item name="cpb_sweep_speed">@string/cpb_default_sweep_speed</item>
        <item name="cpb_rotation_speed">@string/cpb_default_rotation_speed</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">97dp</item>
        <item name="android:indeterminate">true</item>
    </style>

</resources>
