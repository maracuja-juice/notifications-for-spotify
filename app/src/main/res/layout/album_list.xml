<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="2dp">

    <ImageView
        android:id="@+id/album_list_album_art"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="6dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="6dp"
        android:adjustViewBounds="false"
        android:contentDescription="@string/thumbnail"
        android:cropToPadding="false"
        android:scaleType="centerInside"
        tools:src="@mipmap/ic_launcher" />

    <RelativeLayout
        android:id="@+id/album_list_text_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/album_list_album_art"
        android:layout_toEndOf="@+id/album_list_album_art">

        <TextView
            android:id="@+id/album_list_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:textSize="18sp"

            android:textStyle="bold"
            tools:text="Title" />

        <TextView
            android:id="@+id/album_list_artists"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/album_list_title"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:textSize="16sp"
            tools:text="Artists" />

        <TextView
            android:id="@+id/album_list_release_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/album_list_artists"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="2dp"
            android:text="Release Date"
            android:textSize="16sp" />

    </RelativeLayout>

</RelativeLayout>
